<% if params[:controller] === "pages" %>
  <div id="navbar-white-bg-bottom"></div>
<% end %>
<div class="navbar-white-bg">
  <div class="navbar-wagon">
    <!-- Logo -->
    <%= link_to root_path, class: "navbar-wagon-brand dynamic-logo" do %>
      <div class="dynamic-logo-item dynamic-logo-item-blanc">
        <%= image_tag("logo-detoure-blanc.svg", class: " logo-blanc") %>
      </div>
      <div class="dynamic-logo-item dynamic-logo-item-gris">
        <%= image_tag("logo-detoure-gris.svg", class: "logo-gris") %>
      </div>
    <% end %>

    <!-- Right Navigation -->
    <div class="navbar-wagon-right hidden-xs hidden-sm">
      <% if params[:controller] === "pages" %>
        <%= link_to "À propos", "#about", class: "navbar-wagon-item navbar-wagon-link trait-vert trait-vert--hover" %>
        <%= link_to "Services", "#service", class: "navbar-wagon-item navbar-wagon-link trait-vert trait-vert--hover" %>
        <%= link_to "Portofolio", "#portofolio", class: "navbar-wagon-item navbar-wagon-link trait-vert trait-vert--hover" %>
        <%= link_to "Contact", "#contact", class: "navbar-wagon-item navbar-wagon-link trait-vert trait-vert--hover" %>
      <% end %>
    </div>
    <% if params[:controller] === "pages" %>
    <!-- Dropdown list appearing on mobile only -->
      <div class="navbar-wagon-item hidden-md hidden-lg">
        <div id="mySidenav" class="sidenav">
          <div class="navbar-wagon margin-bottom-30">
            <%= link_to root_path, class: "navbar-wagon-brand", id: "sidenav-logo" do %>
              <%= image_tag("logo-detoure-gris.svg", class: "logo-gris") %>
            <% end %>
            <a href="javascript:void(0)" class="closebtn" id="closeNav"><%= image_tag("fermer_sidenav.svg", style: "height: 20px", alt: "Fermer le menu") %></a>
          </div>
          <%= link_to "À propos", "#about", class: "navbar-wagon-item navbar-wagon-link" %>
          <%= link_to "Services", "#service", class: "navbar-wagon-item navbar-wagon-link" %>
          <%= link_to "Portofolio", "#portofolio", class: "navbar-wagon-item navbar-wagon-link" %>
          <%= link_to "Contact", "#contact", class: "navbar-wagon-item navbar-wagon-link" %>
          <a href="" class="navbar-wagon-item navbar-wagon-link green">
            <%= image_tag("icone_verte.svg", style: "height: 20px", alt: "Découvrez l'univers d'Avem Création", class: "margin-right-15") %>
          Découvrir Avem</a>
        </div>

        <!-- Use any element to open the sidenav -->
        <span id="openNav" class="dynamic-logo">
          <div class="dynamic-logo-item dynamic-logo-item-blanc">
            <%= image_tag("menu_rond_blanc.svg", style: "height: 20px", alt: "Ouvrir le menu", class: "logo-blanc") %>
          </div>
          <div class="dynamic-logo-item dynamic-logo-item-gris">
            <%= image_tag("menu_rond_vert.svg", style: "height: 20px", alt: "Ouvrir le menu", class: "logo-gris") %>
          </div>
        </span>
      </div>
    <% end %>
  </div>
</div>


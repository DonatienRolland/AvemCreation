<%= simple_form_for @less_form, remote: true  do |f| %>
    <div class="question-card flex-container hidden">
      <div class="previous btn-question">
        <i class="fas fa-chevron-left"></i>
      </div>
      <div class="question">
        <% session[:step] = "recette" %>
        <%= f.label :recette, label: "Tu préfères le terme Astuce ou Recette :" %>
        <div style="display: flex; align-items: center;">
          <div class="answers" id="names_choice">
            <%= f.collection_radio_buttons :recette, [['Recette','Recette'], ['Astuce','Astuce']], :first, :last %>
          </div>
          <div class="text-answers">
            <!-- <#%= f.input :recette, label: false, placeholder: "Autre", id:"form_less_recette_autre" %> -->
            <input class="form-control is-valid string optional" placeholder="Autre" type="text" value="<%= @less_form.recette == 'Recette' || @less_form.recette == 'Astuce' ? '' : @less_form.recette %>" name="form_less[recette]" id="form_less_recette">
          </div>
          <div class="hidden">
            <%= f.input :recette, label: false, placeholder: "Autre" %>
          </div>
        </div>
      </div>
      <div class="next btn-question">
        <i class="fas fa-chevron-right"></i>
      </div>
    </div>
    <div class="question-card flex-container hidden">
      <div class="previous btn-question">
        <i class="fas fa-chevron-left"></i>
      </div>
      <div class="question">
        <% session[:step] = "email" %>
        <%= f.label :firstname, label: "Comment t'appeles tu ?" %>
        <div class="text-answers">
          <%= f.input :firstname, label: false, placeholder: "Sophie ? Jules ?" %>
        </div>
      </div>
      <div class="next btn-question">
        <i class="fas fa-chevron-right"></i>
      </div>
    </div>

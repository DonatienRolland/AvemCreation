          <%= f.collection_radio_buttons :name, [['Less','Less'], ['Makebyou','Makebyou'], ['Creathome','Creathome']], :first, :last %>
        </div>
      </div>
      <div class="next btn-question">
        <i class="fas fa-chevron-right"></i>
      </div>
    </div>
